<idea-plugin>
    <id>com.markskelton.one-dark-italic</id>
    <name>One dark italic</name>
    <category>Editor Color Schemes"</category>
    <vendor email="mdskelton99@gmail.com"
            url="https://github.com/markypython/jetbrains-one-dark-italic">Mark Skelton</vendor>

    <description><![CDATA[
        One Dark italic color theme for JetBrains IDEs.<br>
        <em>Includes italic support for comments and keywords</em>
    ]]></description>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <bundledColorScheme path="colorSchemes/OneDarkItalic" />
    </extensions>
</idea-plugin>
